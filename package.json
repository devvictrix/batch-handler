{
  "name": "batch-handler",
  "version": "1.1.1",
  "description": "A simple yet powerful Node.js utility for processing arrays of items in batches with control over concurrency, retries, and cancellation.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rimraf dist && tsc && tsc --module commonjs --outDir ./dist --declaration false --removeComments false --sourceMap false --target es2020 ./src/index.ts && mv ./dist/index.js ./dist/index.cjs",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "prepublishOnly": "npm run lint && npm test && npm run build"
  },
  "author": "devvictrix <dev.victrix@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devvictrix/batch-handler.git"
  },
  "homepage": "https://github.com/devvictrix/batch-handler#readme",
  "bugs": {
    "url": "https://github.com/devvictrix/batch-handler/issues"
  },
  "keywords": [
    "batch",
    "batching",
    "bulk",
    "chunk",
    "chunking",
    "processing",
    "async",
    "await",
    "promise",
    "concurrent",
    "concurrency",
    "parallel",
    "tasks",
    "jobs",
    "queue",
    "task-runner",
    "job-queue",
    "retry",
    "retries",
    "backoff",
    "resilience",
    "p-retry",
    "p-limit",
    "rate-limit",
    "throttle",
    "flow-control",
    "pipeline",
    "middleware",
    "abort",
    "cancel",
    "cancellation",
    "io",
    "async-io",
    "api",
    "http",
    "axios",
    "fetch",
    "database",
    "db",
    "crud",
    "file-system",
    "fs",
    "stream",
    "async-iterator",
    "message-queue",
    "kafka",
    "rabbitmq",
    "sqs",
    "grpc",
    "graphql",
    "etl",
    "typescript",
    "node",
    "nodejs",
    "utility",
    "helper",
    "event-emitter"
  ],
  "dependencies": {
    "p-limit": "^6.2.0",
    "p-retry": "^6.2.1"
  },
  "peerDependenciesMeta": {},
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.4.5"
  }
}